{
  "manifest_version": 3,
  "name": "Price to Hours Converter",
  "version": "1.0.0",
  "description": "Convert item prices to hours of work required based on your hourly wage",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/storage.js",
        "utils/shopping-sites.js",
        "scripts/price-detector.js",
        "scripts/converter.js",
        "content/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
